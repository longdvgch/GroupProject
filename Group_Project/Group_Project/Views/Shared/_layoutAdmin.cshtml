<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Coodinator Page", "Index", "MarkettingCoodinator", new { area = "" }, new { @class = "navbar-brand " })
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("New Notice", "NewNotice", "MarkettingCoodinator")</li>
                <li><span class="badge badge-danger" style="background-color:red">@Session["New"]</span></li>
                <li>@Html.ActionLink("Post Changed", "postChanged", "MarkettingCoodinator")</li>
                <li><span class="badge badge-danger" style="background-color:red">@Session["changed"]</span></li>
                <li class="navbar-text">Hi @Session["User"]!</li>
                <li>@Html.ActionLink("LogOut", "Login", "Home")</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center; font-size: 30; font-weight:bold">&copy; @DateTime.Now.Year -Group 4</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>