@model Group_Project.SendContend

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("DoEdit","MarkettingCoodinator",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SendContend</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.wordContend, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.wordContend, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.wordContend, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               
                <img src="@Url.Content(@Model.imageContend)" width="200" height="150" />
                
            </div>
        </div>

        <div class="form-group" >
            @Html.LabelFor(model => model.uploaddDate, htmlAttributes: new { @style = "readonly", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.uploaddDate, new { htmlAttributes = new {@readonly="true", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.uploaddDate, "", new { @readonly = "true", @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comment, new { htmlAttributes = new {@type = "TextArea",@width="400",@height="500", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.contendStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.contendStatus, new { htmlAttributes = new { @class = "form-control" } })*@
                <select name="chooseStatus" class="form-control" style="width: 100px" required>
                    <option value="New">New</option>
                    <option value="Working">Working</option>
                    <option value="Require Change">Require Change</option>
                    <option value="Done">Done</option>
                    <option value="Canceled">Cancel</option>
                </select>
                @Html.ValidationMessageFor(model => model.contendStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
