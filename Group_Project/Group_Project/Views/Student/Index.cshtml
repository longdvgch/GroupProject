@model Group_Project.SendContend
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Upload pages</h2>
<fieldset class="well form-horizontal" id="contact_form">
    <div class="form-horizontal">
        @using (Html.BeginForm("UploadFile", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <hr />
            <div class="form-group">

                @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBox("file", "", new { type = "file" }) <br />
                        <input type="submit" value="Upload" />
                        @ViewBag.Message
                    </div>
                </div>

            </div>

        }
        @using (Html.BeginForm("UploadWord", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <hr />
            <div class="form-group">

                @Html.Label("Word File", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBox("file", "", new { type = "file" }) <br />
                        <input type="submit" value="Upload W" />
                        @ViewBag.Message2
                    </div>
                </div>

            </div>

        }

        @using (Html.BeginForm("sendContent", "Student"))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-left:370px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ADD" class="btn btn-success" />
                </div>
            </div>
        }
    </div>

</fieldset>




